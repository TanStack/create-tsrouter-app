  <% if (addOnEnabled.eslint) { %>"include": ["**/*.ts", "**/*.tsx", "eslint.config.js", "prettier.config.js", "vite.config.js"],
  <% } else if (addOnEnabled.oxlint) { %>"include": ["**/*.ts", "**/*.tsx", ".oxlintrc.json", "prettier.config.js", "vite.config.js"],
